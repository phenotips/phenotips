<assembly>
  <id>package</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <dependencySets>
    <!-- Phenotips webapp. -->
    <dependencySet>
      <includes>
        <include>${project.groupId}:phenotips-war</include>
      </includes>
      <outputDirectory>webapps/phenotips</outputDirectory>
      <unpack>true</unpack>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>
    <!-- Unpack the HSQLDB database files to package it in the distribution -->
    <dependencySet>
      <includes>
        <include>${project.groupId}:database-zip</include>
      </includes>
      <outputDirectory>/data</outputDirectory>
      <unpack>true</unpack>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>
    <!-- Solr configuration. -->
    <dependencySet>
      <includes>
        <include>${project.groupId}:solr-configuration</include>
      </includes>
      <outputDirectory>/data/solr/</outputDirectory>
      <unpack>true</unpack>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>
    <!-- Unpack Jetty files -->
    <dependencySet>
      <includes>
        <include>${project.groupId}:jetty-resources</include>
      </includes>
      <outputDirectory>/</outputDirectory>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>jetty/contexts/search.xml</exclude>
        </excludes>
      </unpackOptions>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>
  </dependencySets>
</assembly>
