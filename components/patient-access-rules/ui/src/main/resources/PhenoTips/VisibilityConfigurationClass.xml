    <property>
      <code>require(['jquery'], function ($) {
  var setLevelEnabled = function(level, enabled) {
    $.each($('#default-visibility-selection label &gt; input[type="radio"][value="' + level + '"]'), function(i, elt) {
      elt.disabled = !enabled;
      if (enabled === false) {
         elt.up('label').addClassName('disabled');
      } else {
         elt.up('label').removeClassName('disabled');
      }
    });
  }
  var init = function() {
    $.each($('#all-visibility-levels input[type="checkbox"]'), function(i, item) {
      if (item.attributes['checked']) {
        setLevelEnabled(item.attributes['value'].value, false);
      }
      item.observe('change', function(event) {
        setLevelEnabled(item.attributes['value'].value, !!!item.checked);
      });
    });
  };
  (XWiki.domIsLoaded &amp;&amp; init()) || document.observe("xwiki:dom:loaded", init);
});</code>
