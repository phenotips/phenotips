    <property>
      <code>document.observe('xwiki:dom:loaded', function ()
{
  /* The code should not be called when these are not available. */
  var familySearchUrl = "$xwiki.getURL('PhenoTips.FamilySearch', 'get', 'outputSyntax=plain')";
  var addMemberUrl = Form.Element.getValue($('manageFamilyMemberUrl'));
  var familyIdHolder = $('PhenoTips.FamilyReference_0_reference');
  var searchInput = familyIdHolder.previous("input");

  /* A link that points to the family page that the user selected after the search.
  A nice way for the user to be able to confirm that the correct family was selected. */
  var newFamilyWrapper = familyIdHolder.up('.new-family-wrapper');
  var openFamilyButton = newFamilyWrapper.up().down('#open-family');
  var remove = newFamilyWrapper.up().down('a.remove');

  var belongsToFamily = newFamilyWrapper.hasClassName('hidden') || Form.Element.getValue(familyIdHolder);

  initialize();
  adjustView();

  function initialize() {
    familyIdHolder.hide();
    newFamilyWrapper.removeClassName('hidden');

    /* Removing patient from a family. */
    remove.observe("click", function(event) {
      event.stop();
      setFamily();
      adjustView();
      manageFamilyRequest(Form.Element.getValue(familyIdHolder), false);
    });

    /* Adding a patient to a family. */
    if (familyIdHolder != null &amp;&amp; !searchInput.hasClassName('initialized')) {
      familyIdHolder.hide();
      searchInput._suggest = new PhenoTips.widgets.Suggest(searchInput, {
        script: familySearchUrl + "&amp;json=true&amp;",
        varname: "input",
        noresults: "No matching terms",
        resultsParameter: "matchedFamilies",
        json: true,
        resultId: "id",
        resultValue: "textSummary",
        enableHierarchy: false,
        fadeOnClear: false,
        timeout: 30000,
        parentContainer: $('body')
      });

      searchInput.addClassName('initialized');
      searchInput.observe("focus", function (event)
      {
        Form.Element.clear(searchInput);
      });

      Event.observe(searchInput, "ms:suggest:selected", function (event) {
        familyIdHolder.value = event.memo.id;
        setFamily(event.memo.id);
        adjustView();
        manageFamilyRequest(event.memo.id, true);
      });
    }
  }

  function manageFamilyRequest(id, add) {
    var url = addMemberUrl + id;
    var errorTitle = "";
    if (add) {
      url += "&amp;add=true";
      errorTitle = "Could not remove from family " + id;
    } else {
      url += "&amp;remove=true";
      errorTitle = "Could not add to family " + id;
    }
    new Ajax.Request(url, {
      method: 'get',
      onSuccess: function (transport) {
        var response = transport.responseText;
        if (response) {
          Form.Element.clear(searchInput);
          new PhenoTips.widgets.ModalPopup(response, {}, {title: errorTitle}).show();
        }
      }
    });
  }

  function adjustView() {
    if (!belongsToFamily) {
      openFamilyButton.up().hide();
      remove.hide();
      newFamilyWrapper.show();
    } else {
      openFamilyButton.up().show();
      remove.show();
      newFamilyWrapper.hide();
    }
  }

  /** no id means no family */
  function setFamily(id) {
    if (id) {
      openFamilyButton.writeAttribute("href", new XWiki.Document(id).getURL("edit"));
      belongsToFamily = true;
    } else {
      belongsToFamily = false;
      openFamilyButton.writeAttribute("href", '');
    }
  }
});
