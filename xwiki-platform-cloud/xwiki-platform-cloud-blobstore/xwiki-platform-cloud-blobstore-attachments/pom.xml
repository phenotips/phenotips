<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
  xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.xwiki.contrib</groupId>
    <artifactId>xwiki-platform-cloud-blobstore</artifactId>
    <version>4.0</version>
  </parent>
  <artifactId>xwiki-platform-cloud-blobstore-attachments</artifactId>

  <name>XWiki Platform - Cloud - Blob store - Attachments</name>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <xwiki.clirr.skip>true</xwiki.clirr.skip>
  </properties>

  <dependencies>
    <!--
      * Needed for:
      * XWikiAttachment, XWikiDocument, XWikiHibernateStore,
      * XWikiAttachmentStoreInterface, XWikiAttachmentVersioningStore,
      * XWikiAttachmentRecyclebinStore
    -->
    <dependency>
      <groupId>org.xwiki.platform</groupId>
      <artifactId>xwiki-platform-oldcore</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.xwiki.contrib</groupId>
      <artifactId>xwiki-platform-cloud-blobstore-api</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.xwiki.platform</groupId>
      <artifactId>xwiki-platform-store-transaction</artifactId>
      <version>${project.version}</version>
    </dependency>
  </dependencies>
</project>
